pkgname=powerstation-asus-radical-git
_pkgbase=powerstation
pkgver=v0.2.2.r16.gfd43cf9
pkgrel=1
pkgdesc="Open source performance daemon with DBus interface"
arch=('x86_64')
url="https://github.com/Radiicall/PowerStation"
license=('GPL')
depends=('dbus' 'pciutils')
makedepends=('rust' 'make' 'cmake' 'clang' 'git' 'lld')
provides=('powerstation')
conflicts=('powerstation-bin' 'powerstation-git')
source=(
    "powerstation"
    "org.shadowblip.PowerStation.conf"
    "powerstation.service"
)

sha256sums=(
    'SKIP'
    'SKIP'
    'SKIP'    
)

prepare() {
    cd "$srcdir/"
}

build() {
    cd "$srcdir/"
}

package() {
    install -D -m 755 "$srcdir/powerstation" "${pkgdir}/usr/bin/powerstation"
	install -D -m 644 "$srcdir/org.shadowblip.PowerStation.conf" "${pkgdir}/usr/share/dbus-1/system.d/org.shadowblip.PowerStation.conf"
	install -D -m 644 "$srcdir/powerstation.service" "${pkgdir}/usr/lib/systemd/system/powerstation.service"
}
